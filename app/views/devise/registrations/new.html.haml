%h2 New Account

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!

  = f.label 'Player Name (how others recognize you in the game)'
  = f.text_field :name, placeholder: "Player's name"

  = f.label 'Email (for login only, not visible by other users)'
  = f.email_field :email, placeholder: "example@gmail.com"

  = f.label 'Password'
  = f.password_field :password, placeholder: "Password for sign-in"

  = f.label 'Password Confirmation'
  = f.password_field :password_confirmation, placeholder: "Repeat password"

  %br/
  %button.btn{type: "submit"} Sign Up

= render "devise/shared/links"
